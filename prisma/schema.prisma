// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
} 

model users { 
  id Int @id @default(autoincrement())
  name String 
  username String @unique
  email String @unique
  password String 
  mainPhoto String?
  createdAt DateTime @default(now()) @db.Timestamptz(6)   
}

model typeFoodPlaces { 
  id Int @id @default(autoincrement())
  name String @unique
  foodPlaces foodPlaces[]
}

model states { 
  id Int @id @default(autoincrement())
  name String @unique
  citys citys[]
} 

model citys { 
  id Int @id @default(autoincrement())
  name String @unique
  states states @relation(fields: [stateId], references: [id])
  stateId Int
  foodPlaces foodPlaces[]
}

model foodPlaces { 
  id Int @id @default(autoincrement())
  name String @unique
  score Int
  description String
  website String @unique
  mainPhoto String
  address String @unique
  typeFoodPlaces typeFoodPlaces @relation(fields: [typeId], references: [id])
  typeId Int 
  citys citys @relation(fields: [cityId], references: [id])
  cityId Int
}
